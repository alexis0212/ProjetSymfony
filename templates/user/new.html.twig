{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 d-flex flex-column align-items-center">
    <h2 class="mb-4 text-center">Créer un nouvel utilisateur</h2>
    <div class="card p-4 shadow" style="width: 35rem; background: linear-gradient(180deg, #0078D7, #0056b3); color: white; border-radius: 10px;">
        {{ form_start(form) }}
            <div class="mb-3">
                <label for="email" class="form-label" style="font-weight: bold;">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" style="font-weight: bold;">Mot de passe</label>
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="roles" class="form-label" style="font-weight: bold;">Rôle</label>
                {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="mb-3">
                <label for="isActive" class="form-label" style="font-weight: bold;">Activer</label>
                <div class="d-flex">
                    {{ form_widget(form.isActive) }}
                </div>
            </div>
            <div class="d-flex justify-content-start gap-2">
                <a href="{{ path('user_index') }}" class="btn btn-danger">Annuler</a>
                <button type="submit" class="btn btn-light">Créer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
