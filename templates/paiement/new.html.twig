{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Enregistrer un Paiement</h2>
        <div class="card p-4 shadow-sm" style="background: linear-gradient(180deg, #007BFF, #0056b3); color: white;">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.date, 'Date du Paiement', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.montant, 'Montant (FCFA)', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary me-3"><i class="fas fa-save"></i> Enregistrer</button>
                    <a href="{{ path('dette_details', { id: dette.id }) }}" class="btn btn-danger"><i class="fas fa-times"></i> Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
