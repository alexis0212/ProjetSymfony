{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Ajouter un Nouvel Article</h2>

    <div class="card p-4 shadow" style="width: 30rem; margin: 0 auto;">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.nomArticle, { 'label': 'Nom de l\'article' }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.prix, { 'label': 'Prix (FCFA)' }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.qteStock, { 'label': 'Quantit√© en stock' }) }}
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('article_index') }}" class="btn btn-secondary">Retour</a>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
