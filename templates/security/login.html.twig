{% extends 'base.html.twig' %}
    {% block sidebar %}{% endblock %}

{% block body %}
<div class="container mt-5 d-flex flex-column align-items-center">
    <h2 class="mb-4 text-center">Connexion</h2>
    <div class="card p-4 shadow" style="width: 30rem; background: linear-gradient(180deg, #0078D7, #0056b3); color: white;">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

      <form method="post" action="{{ path('app_login') }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="mb-3">
        <label for="username" class="form-label" style="font-weight: bold;">Email</label>
        <input type="text" name="email" id="username" class="form-control" value="{{ last_username }}" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label" style="font-weight: bold;">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" required>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-light" style="font-weight: bold;">Se connecter</button>
    </div>
</form>


    </div>
</div>
{% endblock %}
