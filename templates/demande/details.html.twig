{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card p-4 shadow">
        <div class="row">
            <div class="col-md-6">
                <div class="p-3 bg-primary text-white rounded">
                    <h5>Nom: {{ dette.client.surname }}</h5>
                    <h5>Tel: {{ dette.client.telephone }}</h5>
                    <h5>Email: {{ dette.client.utilisateur ? dette.client.utilisateur.email : 'N/A' }}</h5>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 bg-secondary text-white rounded">
                    <h5>Montant Total: {{ dette.montant|number_format(0, '.', ' ') }} FCFA</h5>
                    <h5>Montant Versé: {{ dette.montantVerser|number_format(0, '.', ' ') }} FCFA</h5>
                    <h5>Montant Restant: {{ dette.montantRestant|number_format(0, '.', ' ') }} FCFA</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4 mb-2">
        <a href="{{ path('demande_index') }}" class="btn btn-secondary me-2">Retour</a>
    </div>

    <div class="mt-4">
        <table class="table table-bordered text-center">
            <thead class="table-primary">
                <tr>
                    <th>ARTICLE</th>
                    <th>PRIX</th>
                    <th>QUANTITÉ</th>
                    <th>MONTANT</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.nomArticle }}</td>
                        <td>{{ article.prix|number_format(0, '.', ' ') }}</td>
                        <td>{{ article.qteStock }}</td>
                        <td>{{ (article.prix * article.qteStock)|number_format(0, '.', ' ') }} FCFA</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun article trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-end">
            <strong>Total: {{ dette.montant|number_format(0, '.', ' ') }} FCFA</strong>
        </div>
    </div>
</div>
{% endblock %}
